# For default bindings see https://pwmt.org/projects/zathura/documentation/
# For namess of commands do `man zathurarc`

# Gallium mappings:
map h scroll left
map a scroll down
map A scroll full-down
map e scroll up
map E scroll full-up
map i scroll right
map l focus_inputbar :open\ 
# TODO the following does not work properly:
# map L focus_inputbar :open\ append_filepath

# This is normally bound to a:
map k adjust_window best-fit

# Navigation in the bookmark/index window opened with tab:
map [index] a navigate_index down
map [index] e navigate_index up
map [index] i navigate_index expand
map [index] I navigate_index expand-all
map [index] h navigate_index collapse
map [index] H navigate_index collapse-all

# Set window title, which gets displayed in e.g. I3 window title:
set window-title-basename true
# set window-title-home-tilde true # This is obsolete, because window-title-basename disables the path, there does not appear to be a way to do this like in nvim with filename - path

# Open document in fit-width mode by default (see https://gist.github.com/michaelmrose/9595075b43f24aa903fa)
set adjust-open "best-fit"

# zoom and scroll step size
set zoom-step 20
set scroll-step 100
set scroll-page-aware "true" # So when jumping pages it will align with top of page regardless of scroll step
# zoom mappings (Overlap with default jumplist bindings, remap those to ctrl shift)
map <C-a> zoom in
map <C-e> zoom out
map <C-l> jumplist backward
map <C-o> jumplist forward

# copy selection to system clipboard
set selection-clipboard clipboard

# enable incremental search
set incremental-search true

# Adjust window to width
#set adjust-open "width"
#autocmd * execute "normal! s"

# Invert text, but not images and other media (PDF-Images will be inverted nonetheless)
# set recolor "true"
# set recolor-reverse-video "true"

# Page padding, default is 1, 4 should make it equal to my window manager border size
set page-padding 4

# Font:
set font "noto sans mono 16"

# Colorscheme Catppuccin Mocha (See https://github.com/catppuccin/zathura/blob/main/src/catppuccin-mocha), default-bg has been changed to darker (crust), so that page gaps are better visible in viewer:
set default-fg               rgba(205,214,244,1)
set default-bg               rgba(17,17,27,1)
set completion-bg            rgba(49,50,68,1)
set completion-fg            rgba(205,214,244,1)
set completion-highlight-bg  rgba(87,82,104,1)
set completion-highlight-fg  rgba(205,214,244,1)
set completion-group-bg      rgba(49,50,68,1)
set completion-group-fg      rgba(137,180,250,1)
set statusbar-fg             rgba(205,214,244,1)
set statusbar-bg             rgba(49,50,68,1)
set notification-bg          rgba(49,50,68,1)
set notification-fg          rgba(205,214,244,1)
set notification-error-bg    rgba(49,50,68,1)
set notification-error-fg    rgba(243,139,168,1)
set notification-warning-bg  rgba(49,50,68,1)
set notification-warning-fg  rgba(250,227,176,1)
set inputbar-fg              rgba(205,214,244,1)
set inputbar-bg              rgba(49,50,68,1)
set recolor-lightcolor       rgba(30,30,46,1)
set recolor-darkcolor        rgba(205,214,244,1)
set index-fg                 rgba(205,214,244,1)
set index-bg                 rgba(30,30,46,1)
set index-active-fg          rgba(205,214,244,1)
set index-active-bg          rgba(49,50,68,1)
set render-loading-bg        rgba(30,30,46,1)
set render-loading-fg        rgba(205,214,244,1)
set highlight-color          rgba(87,82,104,0.5)
set highlight-fg             rgba(245,194,231,0.5)
set highlight-active-color   rgba(245,194,231,0.5)

# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 2
}

order += "wireless _first_"
order += "cpu_usage"
order += "memory"
order += "battery all"
order += "volume master"
order += "path_exists MICMUTED"
order += "tztime local"

wireless _first_ {
        format_up = "WIFI: %quality"
        format_down = "WIFI: down"
}

battery all {
        format = "%status %percentage"
        format_percentage = "%.00f%s"
        status_chr = "CHR:"
        status_bat = "BAT:"
        low_threshold = 10
        threshold_type = "percentage"
}

volume master {
        format = "VOL: %volume"
        format_muted = "VOL: muted (%volume)"
        separator = false
        separator_block_width = 12
}

# TODO: The indicator in the statusbar does not yet register changes made by any other way than the FN-Mute-Key
# TODO: The username is hardcoded here, improve this
path_exists MICMUTED {
        path = "/home/lucas/.cache/i3/microphoneismuted"
        format = "MIC: Off"
        format_down = "MIC: On"

}

cpu_usage {
        format = "CPU: %usage"
        max_threshold = 90
        degraded_threshold = 75
        separator = false
        separator_block_width = 12
}

memory {
        format = "RAM: %percentage_used"
        decimals = "0"
        threshold_degraded = "20%"
        threshold_critical = "10%"
}

tztime local {
        format = "%d.%m.%Y %H:%M ⁞ "
        separator = true
}
